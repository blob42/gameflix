<?xml version="1.0" encoding="UTF-8" ?>
{{ $resolution := "high" }}
    <document>
        <head>
            <style>
                .banner {
                    height: 350;
                }

                .lockup {
                    margin: 100;
                }

                .background {
                    background-color: #0c101c;
                }

            </style>
        </head>
       <stackTemplate class="background">
          <identityBanner class="banner">
              <background>
                  {{ $clienturl := "http://192.168.24.1:9042/client/"}}
                  <img class="background" src="{{$clienturl}}images/bg-dark-banner.jpeg" width="1920" height="400"/>
              </background>
             <!--<title>Available Action Movies</title>-->
          </identityBanner>
          <collectionList>
             <shelf>
                <section>
                   {{ range $index, $video := . }}
                   <lockup videoSrc="{{ $video.GetVideoUrl }}">
                       <img width="480" height="360" src="{{ $video.GetThumbnail $resolution }}"></img>
                       <description>{{ $video.Description | html }}</description>
                   </lockup>
                   {{end}}
                </section>
             </shelf>
             <shelf>
                <section>
                   {{ range $index, $video := . }}
                   <lockup videoSrc="{{ $video.GetVideoUrl }}">
                       <img width="480" height="360" src="{{ $video.GetThumbnail $resolution }}"></img>
                       <description>{{ $video.Description | html }}</description>
                   </lockup>
                   {{end}}
                </section>
             </shelf>
          </collectionList>
       </stackTemplate>
    </document>

